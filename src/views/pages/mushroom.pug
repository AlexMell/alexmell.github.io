extends ../layout

block append scripts
    script(src='../../../../src/plugins/ion.rangeSlider.js')
    script(src='../../../../dist/scripts/mushroom/mushroom.min.js')

block content
    div.container.mushroom
        .mushroom__canvas
            canvas#mushroom.mushroom-canvas
        .mushroom__control
            .mushroom__control-holder
                .mushroom__control-name Control points Leg
                .mushroom__control-slider
                    span.mushroom__control-title Point 1X
                    input(id="range")
                .mushroom__control-slider
                    span.mushroom__control-title Point 1Y
                    input(id="range2")
                .mushroom__control-slider
                    span.mushroom__control-title Point 2X
                    input(id="range3")
                .mushroom__control-slider
                    span.mushroom__control-title Point 2Y
                    input(id="range4")
            .mushroom__control-holder
                .mushroom__control-name Move Hat and end points of Leg
                .mushroom__control-slider
                    span.mushroom__control-title End X
                    input(id="range-end-x")
                .mushroom__control-slider
                    span.mushroom__control-title End Y
                    input(id="range-end-y")